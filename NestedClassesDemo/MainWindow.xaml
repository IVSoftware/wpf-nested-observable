<Window x:Class="NestedClassesDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NestedClassesDemo"
        mc:Ignorable="d"
        Title="Main Window" Height="300" Width="500"
        FontSize="16">
    <Window.DataContext>
        <local:ClassA/>
    </Window.DataContext>
    <StackPanel Orientation="Vertical">
        <Grid Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Label Content="Sum Of B Cost" Height="35" Background="AliceBlue" Grid.Column="0"/>
            <Label Content="{Binding SumOfBCost}" Height="35" Background="AliceBlue" Grid.Column="1"/>
            <Button
                Content="Replace C Objects"
                Padding ="10, 0"
                Height="35"
                Background="LightGreen"
                Foreground="#222222" 
                Grid.Column="3" 
                Click="OnTestReplaceCObjects"/>
        </Grid>

        <DataGrid 
            Name="dataGridClassC"
            AutoGenerateColumns="False"
            ItemsSource="{Binding BCollection}" 
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch" 
            Margin="10"
            MinRowHeight="40"
            HeadersVisibility="None"
            GridLinesVisibility="None"
            CanUserAddRows="False"
            CanUserDeleteRows="False"
            CanUserResizeRows="False">
            <DataGrid.Columns>
                <DataGridTemplateColumn Width="*">
                    <!-- Display Mode -->
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Label
                                    VerticalContentAlignment="Center" 
                                    Padding="10,1"
                                    Content="{Binding C.Name}"
                                    Background="LightBlue"
                                    Foreground="#222222"
                                    Width="100"/>
                                <TextBlock
                                    Padding="10"
                                    Text="Cost" 
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"/>
                                <TextBlock
                                    MinWidth="40"
                                    Padding="10"
                                    Text="{Binding C.Cost, Mode=OneWay}" 
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"/>
                                <TextBlock 
                                    Padding="10"
                                    Text="Currency"
                                    HorizontalAlignment="Center" 
                                    VerticalAlignment="Center"/>
                                <TextBlock 
                                    MinWidth="40"
                                    Padding="10"
                                    Text="{Binding C.Currency, Mode=OneWay}"
                                    HorizontalAlignment="Center" 
                                    VerticalAlignment="Center"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>

                    <!-- Edit Mode -->
                    <DataGridTemplateColumn.CellEditingTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Label
                                    VerticalContentAlignment="Center" 
                                    Padding="10,1"
                                    Content="{Binding C.Name}"
                                    Background="LightBlue"
                                    Foreground="#222222"
                                    Width="100"/>
                                <TextBlock
                                    Padding="10"
                                    Text="Cost" 
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"/>
                                <TextBox
                                    MinWidth="40"
                                    Padding="10"
                                    Text="{Binding C.Cost, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"/>
                                <TextBlock 
                                    Padding="10"
                                    Text="Currency"
                                    HorizontalAlignment="Center" 
                                    VerticalAlignment="Center"/>
                                <TextBox 
                                    MinWidth="40"
                                    Padding="10"
                                    Text="{Binding C.Currency, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                    HorizontalAlignment="Center" 
                                    VerticalAlignment="Center"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellEditingTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </StackPanel>
</Window>
