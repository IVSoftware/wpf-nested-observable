<Window x:Class="NestedClassesDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NestedClassesDemo"
        mc:Ignorable="d"
        Title="Main Window" Height="300" Width="500"
        FontSize="16">
    <Window.DataContext>
        <local:MainWindowViewModel/>
    </Window.DataContext>
    <StackPanel Orientation="Vertical">
        <StackPanel Orientation="Horizontal" Margin="10"> 
            <Label Content="Sum Of B Cost" Height="35" Background="AliceBlue"/>
            <Label Content="{Binding SumOfBCost}" Height="35" Background="AliceBlue"/>
        </StackPanel>
        <DataGrid 
            Name="dataGridClassC"
            AutoGenerateColumns="False"
            ItemsSource="{Binding BCollection}" 
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch" 
            Margin="10"
            MinRowHeight="40"
            HeadersVisibility="None"
            GridLinesVisibility="None"
            CanUserAddRows="False"
            CanUserDeleteRows="False"
            CanUserResizeRows="False">
            <DataGrid.Columns>
                <DataGridTemplateColumn Width="*">
                    <!-- Display Mode -->
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock
                                    Padding="10"
                                    Text="Cost" 
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"/>
                                <TextBlock
                                    MinWidth="40"
                                    Padding="10"
                                    Text="{Binding C.Cost, Mode=OneWay}" 
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"/>
                                <TextBlock 
                                    Padding="10"
                                    Text="Currency"
                                    HorizontalAlignment="Center" 
                                    VerticalAlignment="Center"/>
                                <TextBlock 
                                    MinWidth="40"
                                    Padding="10"
                                    Text="{Binding C.Currency, Mode=OneWay}"
                                    HorizontalAlignment="Center" 
                                    VerticalAlignment="Center"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>

                    <!-- Edit Mode -->
                    <DataGridTemplateColumn.CellEditingTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock
                                    Padding="10"
                                    Text="Cost" 
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"/>
                                <TextBox
                                    MinWidth="40"
                                    Padding="10"
                                    Text="{Binding C.Cost, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"/>
                                <TextBlock 
                                    Padding="10"
                                    Text="Currency"
                                    HorizontalAlignment="Center" 
                                    VerticalAlignment="Center"/>
                                <TextBox 
                                    MinWidth="40"
                                    Padding="10"
                                    Text="{Binding C.Currency, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                    HorizontalAlignment="Center" 
                                    VerticalAlignment="Center"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellEditingTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </StackPanel>
</Window>
